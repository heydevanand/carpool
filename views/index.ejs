<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PG Carpool</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .ride-card {
            border-left: 4px solid #007bff;
            margin-bottom: 1rem;
        }
        .ride-card.full {
            border-left-color: #dc3545;
        }
        .ride-card.available {
            border-left-color: #28a745;
        }
        .time-badge {
            font-size: 0.9rem;
            font-weight: 600;
        }
        .location-text {
            font-size: 0.9rem;
            color: #6c757d;
        }
        .passenger-count {
            background: #f8f9fa;
            border-radius: 20px;
            padding: 0.25rem 0.75rem;
            font-size: 0.8rem;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-car"></i> PG Carpool
            </a>
            <div>
                <a href="/admin" class="btn btn-outline-light btn-sm">Admin Panel</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-list"></i> Available Rides</h2>
                    <button class="btn btn-success" onclick="refreshRides()">
                        <i class="fas fa-refresh"></i> Refresh
                    </button>
                </div>

                <div id="rides-container">
                    <% if (rides.length === 0) { %>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No rides available at the moment.
                        </div>
                    <% } else { %>
                        <% rides.forEach(ride => { %>
                            <div class="card ride-card <%= ride.availableSeats > 0 ? 'available' : 'full' %>">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-primary time-badge me-2">
                                                    <%= moment(ride.departureTime).format('HH:mm') %>
                                                </span>
                                                <small class="text-muted">
                                                    <%= moment(ride.departureTime).format('MMM DD') %>
                                                </small>
                                            </div>
                                            <div class="route-info">
                                                <div class="location-text">
                                                    <i class="fas fa-map-marker-alt text-success"></i>
                                                    <strong>From:</strong> <%= ride.origin.name %>
                                                </div>
                                                <div class="location-text">
                                                    <i class="fas fa-map-marker-alt text-danger"></i>
                                                    <strong>To:</strong> <%= ride.destination.name %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <div class="passenger-count">
                                                    <i class="fas fa-users"></i>
                                                    <%= ride.passengers.length %>/<%= ride.maxPassengers %>
                                                </div>
                                                <small class="text-muted">
                                                    <%= ride.availableSeats %> seats left
                                                </small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <% if (ride.availableSeats > 0) { %>
                                                <button class="btn btn-primary btn-sm w-100" 
                                                        onclick="joinRide('<%= ride._id %>')">
                                                    <i class="fas fa-plus"></i> Join Ride
                                                </button>
                                            <% } else { %>
                                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                                    <i class="fas fa-times"></i> Full
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                    <% if (ride.notes) { %>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="fas fa-sticky-note"></i> <%= ride.notes %>
                                            </small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-plus-circle"></i> Create New Ride</h5>
                    </div>
                    <div class="card-body">
                        <form id="create-ride-form">
                            <div class="mb-3">
                                <label class="form-label">Your Name</label>
                                <input type="text" class="form-control" id="creatorName" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="creatorPhone" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">From</label>
                                <select class="form-select" id="origin" required>
                                    <option value="">Select pickup location</option>
                                    <% locations.forEach(location => { %>
                                        <option value="<%= location._id %>"><%= location.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">To</label>
                                <select class="form-select" id="destination" required>
                                    <option value="">Select destination</option>
                                    <% locations.forEach(location => { %>
                                        <option value="<%= location._id %>"><%= location.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Departure Time</label>
                                <input type="datetime-local" class="form-control" id="departureTime" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Max Passengers</label>
                                <select class="form-select" id="maxPassengers">
                                    <option value="2">2 people</option>
                                    <option value="3">3 people</option>
                                    <option value="4" selected>4 people</option>
                                    <option value="5">5 people</option>
                                    <option value="6">6 people</option>
                                    <option value="7">7 people</option>
                                    <option value="8">8 people</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Notes (Optional)</label>
                                <textarea class="form-control" id="notes" rows="2" placeholder="Any additional information..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-plus"></i> Create Ride
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Join Ride Modal -->
    <div class="modal fade" id="joinRideModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Join Ride</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="join-ride-form">
                        <div class="mb-3">
                            <label class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="passengerName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="passengerPhone" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="confirmJoinRide()">Join Ride</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
